{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "lib",
		"lib": ["dom", "dom.iterable", "esnext"],
		"rootDir": "src",
		"allowJs": false,
		"downlevelIteration": true,
		"noImplicitAny": true,
		"strict": true,
		"moduleResolution": "node",
		"declaration": true,
    "esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
